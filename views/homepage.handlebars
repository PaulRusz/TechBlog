<h1>Welcome to the Tech Blog</h1>
<div class="blog-posts">
    {{#each posts}}
        <div class="blog-post">
            <h2>{{title}}</h2>
            <p>By {{author}} on {{createdAt}}</p>
            <p>{{content}}</p>
            <a href="/posts/{{id}}">Read More</a>
            <a href="/posts/{{id}}#comments">Comments</a>
        </div>
    {{/each}}
</div>