    <main>
        <h2>Welcome, {{name}}</h2>
        <h2>Blog Posts</h2>
        {{#each posts}}
            <div class="post">
                <h3>{{title}}</h3>
                <p>{{content}}</p>
                <a href="/posts/{{id}}">View</a>
                <a href="/posts/{{id}}/edit">Edit</a>
                <form action="/posts/{{id}}?_method=DELETE" method="POST">
                    <button type="submit">Delete</button>
                </form>
            </div>
        {{/each}}
    </main>